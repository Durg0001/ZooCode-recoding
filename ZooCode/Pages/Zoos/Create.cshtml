@page
@model ZooCode.Pages.Zoos.CreateModel

@{
    ViewData["Title"] = "Opret";
}

<h1>Opret</h1>

<h4>Zoo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zoo.Zoo_name" class="control-label"></label>
                <input asp-for="Zoo.Zoo_name" class="form-control" />
                <span asp-validation-for="Zoo.Zoo_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zoo.Zoo_address" class="control-label"></label>
                <input asp-for="Zoo.Zoo_address" class="form-control" />
                <span asp-validation-for="Zoo.Zoo_address" class="text-danger"></span>
            </div>   
            <div class="form-group">
                @if (Model.ErrorMSGCreate != null)
                {
                    @Model.ErrorMSGCreate;
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Tilbage til Listen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model ZooCode.Pages.ZooAnimals.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Rediger</h1>

<h4>ZooDyr</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZooAnimal.ZooAnimalID" />
            <div class="form-group">
                <label asp-for="ZooAnimal.Zoo.Zoo_name" class="control-label"></label>
                <select asp-for="ZooAnimal.ZooID" class="form-control" asp-items="ViewBag.ZooID"></select>
                <span asp-validation-for="ZooAnimal.ZooID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZooAnimal.Animal.Animal_name" class="control-label"></label>
                <select asp-for="ZooAnimal.AnimalID" class="form-control" asp-items="ViewBag.AnimalID"></select>
                <span asp-validation-for="ZooAnimal.AnimalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.ErrorEditMSG != null)
                {
                    @Model.ErrorEditMSG;                    
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Tilbage til listen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
